= javascript_include_tag 'dispenser_selection'

%section.home.clearfix.well
  .dispenser-pool
    .row
      .dispenser-pool-header
        %h2.text-center
          Select Your Dispenser Type
          - # Unless this is edit!
    .row
      .dispenser-select.col-xs-offset-2.col-xs-8
        %a.btn.btn-default(id="sprinkles-show" href="#")
          Random Sprinkles
        %a.btn.btn-default(id="story-show" href="#")
          Story Sequence
    .row
      .dispenser-create.col-xs-offset-2.col-xs-8.hide(id="sprinkles-form")
        = bootstrap_form_for [current_user, @dispenser] do |f|
          .row
            %fieldset.col-xs-8
              .row
                .col-xs-12
                  = f.text_field :purpose_statement, label: "Label for this Dispenser", placeholder: "To encourage Sally..."
              .row
                .col-xs-6
                  = f.select :significant_id, options_for_significants(current_user.significants), label: "Recipient"
                .col-xs-6
              .row
                .col-xs-6
                  = label_tag :frequency, nil, class: "control-label"
                  = select_tag :frequency, options_for_message_frequency, class: "form-control"
                .col-xs-6
                  = label_tag :period, nil, class: "control-label"
                  = select_tag :period, options_for_message_period, class: "form-control"
            %fieldset.actions.control-group.col-xs-8
              .controls.form-group
                %input(type="submit" value="Submit" class="btn btn-default")